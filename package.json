{
  "name": "scienta-lab-chat",
  "version": "0.0.1",
  "description": "AI-powered biomedical research assistant",
  "author": "Scienta Lab",
  "private": true,
  "workspaces": [
    "chat-app/*",
    "shared-libs/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "start": "pnpm --filter backend start",
    "install:all": "pnpm install && pnpm --filter backend install && pnpm --filter frontend install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
