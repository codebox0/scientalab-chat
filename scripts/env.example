# Scienta Lab Chat - Production Environment Variables
# Copy this file to .env.production and fill in the values

# GitHub Container Registry
GH_USERNAME=your-github-username
GHCR_PAT=your-github-personal-access-token

# Server Configuration
SSH_KEY=your-private-ssh-key
SSH_HOST=your-server-host
SSH_USERNAME=your-server-username

# Application Configuration
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# OpenAI Configuration (LLM)
OPENAI_API_KEY=your-openai-api-key-here

# BioMCP Configuration
BIOMCP_URL=https://biomcp-server-452652483423.europe-west4.run.app
BIO_MCP_SSE_PATH=/sse

# Domain Configuration
FRONTEND_DOMAIN=scientalab.coulibalymamadou.com
API_DOMAIN=api.scientalab.coulibalymamadou.com
FRONTEND_PORT=3003
API_PORT=4001

# CORS Configuration
CORS_ORIGIN=https://scientalab.coulibalymamadou.com

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=https://api.scientalab.coulibalymamadou.com
NEXT_PUBLIC_WS_URL=wss://api.scientalab.coulibalymamadou.com

# SSL Configuration (if using Let's Encrypt)
SSL_EMAIL=your-email@example.com

# Logs Configuration
LOG_LEVEL=info

# Optional: Database Configuration (if adding database later)
# DATABASE_URL=postgresql://user:password@host:port/database
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=scientalab_chat
# DB_USER=scientalab_user
# DB_PASSWORD=your-database-password
# DB_TYPE=postgresql
# DB_SSL=false
# DB_AUTH_SOURCE=admin